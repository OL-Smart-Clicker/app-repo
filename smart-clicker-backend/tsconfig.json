{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ],
    },
    "include": [
        "src/**/*.ts",
        "./jest.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}